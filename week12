//prob10
int main() {
    int arr[] = {11, 22, 33, 44, 55, 66, 77, 88, 99, 110};
    int size = sizeof(arr)/sizeof(arr[0]);
    int *sptr = arr;
    int *eptr = arr + (size - 1);
    while(sptr < eptr) {
        int temp = *sptr;
        *sptr = *eptr;
        *eptr = temp;
        sptr++;
        eptr--;
    }
    for(int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}
